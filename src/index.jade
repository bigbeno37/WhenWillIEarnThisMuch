include jade/utils.jade

doctype html
html.no-js(lang="en")
  head
    include jade/head.jade

  body
    +ie('if IE')
      .browsehappy
        p
          | You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/" target="_blank">upgrade your browser</a> to improve your experience
    
    br
    
    .container
      .row
        .twelve.columns
          h1.center When Will I Earn This Much
    
    br
    
    .container
      form
        .row
          .six.columns
            label(for="moneyPerWeek") Amount of money you earn every week
            input.u-full-width#moneyPerWeek(type="text", placeholder="50")
          .six.columns
            label(for="initialAmount") Amount of money you already have
            input.u-full-width#initialAmount(type="text", placeholder="0")
            
        .row
          .six.columns
            label(for="finalAmount") Amount of money you want to have
            input.u-full-width#finalAmount(type="text", placeholder="2000")
          .six.columns
            label(for="dayEarnedMoney") When you earn your money
            select.u-full-width#dayEarnedMoney
              option(value="Monday") Monday
              option(value="Tuesday") Tuesday
              option(value="Wednesday") Wednesday
              option(value="Thursday") Thursday
              option(value="Friday") Friday
              option(value="Saturday") Saturday
              option(value="Sunday") Sunday
            
        .row
          .twelve.columns
            a.button.button-primary.calculateButton Calculate
            
    .container
      .row
        .twelve.columns
          .price.center.mediumFontSize




    +ie('if lt IE 9')
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
      script window.jQuery || document.write('<script src="dist/js/vendor/jquery-1.11.2.min.js"><\/script>')

    +ieSpecial('if gt IE')
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
      script window.jQuery || document.write('<script src="dist/js/vendor/jquery-2.1.3.min.js"><\/script>')

    script(src="dist/js/plugins.js")
    script(src="dist/js/script.js")
    script(src="dist/js/moment.js")